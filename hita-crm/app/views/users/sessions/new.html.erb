<div class="container">
  <div class="login-container columns is-gapless is-vcentered">
    <div class="column background-img"></div>
    <div class="column text-center">
      <div class="main-container">
        <div class="hita-logo">
          <%= image_tag "hita_logo.png" %>
        </div>
        <div class="welcome-text">Seja bem-vindo ao HITA CRM! <br> Para continuar, fa√ßa login ou cadastre-se:</div>
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="login-input">
            <%= f.email_field :email, id: 'email', class: 'input-form', type: 'text', required: true %>
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="label-input">E-mail</label>
          </div>
          <div class="login-input">
            <%= f.password_field :password, type: 'password', id: 'password', class: 'input-form', required: true %>
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="label-input">Senha</label>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="columns other-options">
              <div class="column">
                <label class="checkbox">
                  <%= f.check_box :remember_me %>
                    Lembrar meu Login
                </label>
              </div>
            </div>
          <% end %>
          <div class="columns is-variable is-5">
            <div class="column">
              <%= f.submit "ENTRAR", id: 'submitBt', class: 'button is-medium is-fullwidth', disabled: true %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.input-form').on('keyup', function() {
    emailLength = $('#email').val().length;
    passwordLength = $('#password').val().length;

    if(emailLength > 0 && passwordLength > 0 ) {
      $('#submitBt').prop('disabled', false);
    } else {
      $('#submitBt').prop('disabled', true);
    }
  });
</script>
