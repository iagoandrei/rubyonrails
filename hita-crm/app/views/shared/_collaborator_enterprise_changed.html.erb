<div class="interaction">
  <div class="columns">
    <div class="column is-1 title">
      <div class="circle green initials-name">
        <%= inline_svg 'change_hindrance.svg', name: 'enterprise-changed' %>
      </div>
    </div>
    <div class="column message-content no-padding-left">
      <div class="columns no-margin-bottom">
        <div class="column is-9 title padding-bottom-5"><%= interaction.owner.name %> alterou a empresa de <%= interaction.collaborator.name %></div>
        <div class="column date padding-bottom-5"><%= interaction.created_at.strftime("%d/%m/%Y %H:%M") %></div>
      </div>
      <div class="columns">
        <div class="column">
          Empresa alterada de <span class="highlight"><%= interaction.old_enterprise&.name %></span> para <span class="highlight"><%= interaction.new_enterprise.name %></span>
        </div>
      </div>
    </div>
  </div>
</div>
