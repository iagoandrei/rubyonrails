<div class="interaction">
  <div class="columns">
    <div class="column is-1 title">
      <div class="circle new-request initials-name">
        <%= inline_svg 'accept.svg', name: 'new-request-by' %>
      </div>
    </div>
    <div class="column message-content no-padding-left">
      <div class="columns no-margin-bottom">
        <div class="column is-9 title padding-bottom-5">Premisas de Proposta Validadas</div>
        <div class="column date padding-bottom-5"><%= interaction.created_at.strftime("%d/%m/%Y %H:%M") %></div>
      </div>
      <div class="columns">
        <div class="column"><%= "<b>#{interaction.owner.name}</b> validou as premisas da proposta:".html_safe %></div>
      </div>
    </div>
  </div>
</div>
