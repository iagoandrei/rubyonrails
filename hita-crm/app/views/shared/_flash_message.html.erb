<div class="container">
  <% if flash[:notice] %>
    <div class="columns">
      <div class="column is-full">
        <p class="alert success"><%= flash[:notice] %></p>
      </div>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="columns">
      <div class="column is-full">
        <p class="alert danger"><%= flash[:alert] %></p>
      </div>
    </div>
  <% end %>
</div>
