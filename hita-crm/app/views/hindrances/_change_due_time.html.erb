<div class="change-planned-modal">
  <div id="changeDueTime" class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
      <div class="has-text-weight-bold margin-bottom-10">Trocar prazo do impedimento</div>
      <%= form_tag change_due_time_path, method: :post, id: 'changeHindranceDueTime' do %>
        <div class="columns">
          <div class="column">
            <label>Novo prazo:</label>
            <input id="newDueTime" class="input" type="text" name="due_time" autocomplete="off">
            <input id="hindranceId" type="hidden" name="hindrance_id">
          </div>
        </div>
        <div class="columns">
          <div class="column">
            <button id="changeDueTimeBt" class="button is-primary is-fullwidth new-report-bt">Salvar</button>
          </div>
        </div>
      <% end %>
      <button class="modal-close is-large" aria-label="close"></button>
    </div>
  </div>
</div>

<script>
  $('#newDueTime').datepicker({
    autoHide: true,
    language: 'pt-BR',
    startDate: '<%= Date.today.strftime("%d/%m/%Y") %>'
  });

  $('#changeDueTimeBt').click(function() {
    $(this).addClass('is-loading');
  });
</script>
